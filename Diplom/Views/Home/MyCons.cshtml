@{
    ViewData["Title"] = "MyConsultations";
}
@model List<Diplom.Models.Entity.Consultation>;



<div class="text-center">
    <div class="text-center" style="height:100%">
        <div style="padding-top: 40px; padding-bottom: 40px">
            <h1>Мои консультации</h1>
        </div>
        <div>
            <div style="text-align:center">
                <div style="margin-left:250px">
                    <div class="card text-center" style="width: 50rem;">
                        <ul class="list-group list-group-flush">
                            @if(Model.Count > 0){
                            @foreach (var cons in Model)
                            {
                                <li class="list-group-item">
                                    <p style="font-family: cursive">@cons.Name</p>
                                    <button type="button" class="btn btn-info">
                                        <a class="px-2 text-black" style="text-decoration:none" asp-controller="Home" asp-action="GetConsultation" asp-route-id="@cons.Id">Посмотреть</a>
                                    </button>
                                        <button type="button" class="btn btn-danger">
                                            <a class="px-2 text-black" style="text-decoration:none" asp-controller="Home" asp-action="DeleteCons" asp-route-consId="@cons.Id">Удалить</a>
                                        </button>
                                        <button type="button" class="btn btn-success">
                                            <a class="px-2 text-black" style="text-decoration:none" asp-controller="Home" asp-action="UpdateCons" asp-route-consId="@cons.Id">Изменить</a>
                                        </button>
                                </li>
                            }
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
