<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Diplom</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Diplom.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="d-flex justify-content-center py-3">
        <ul class="nav nav-pills">
             <li><a class="nav-link px-2 text-black" asp-controller="Home" asp-action="Index">Главная</a></li>
             <li><a class="nav-link px-2 text-black" asp-controller="Search" asp-action="Search">Подписки</a></li>
            @if (User.Identity.IsAuthenticated)
            {
                <li><a class="nav-link px-2 text-black" asp-controller="Home" asp-action="AddCons">Добавить консультацию</a></li>
                <li><a class="nav-link px-2 text-black" asp-controller="Home" asp-action="MyCons">Мои консультации</a></li>
                <form method="post" asp-controller="Account" asp-action="Logout">
                    <input class="btn btn-outline-dark me-2" type="submit" value="Выход" />
                </form>
            }
            else
            {             
            <li><a class="nav-link px-2 text-black" asp-controller="Account" asp-action="Login">Войти</a></li>
            <li><a class="nav-link px-2 text-black" asp-controller="Account" asp-action="Register">Зарегистрироваться</a></li>
            }
        </ul>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Diplom - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
